<div class="well well-small">
  <h4 style="margin-left: 15px;">Konzum Online Shop<h4>
</div>

<% unless @popular_products.blank? %>
  <blockquote>
    <p>Top products between your friends</p>
  </blockquote>

  <div class="row-fluid">
    <ul class="thumbnails">
      <% @popular_products.limit(3).each do |rec| %>
        <li class="span4">
          <div class="thumbnail">
            <%= image_tag 'image_unavailable_gray_top.png' %>
            <div class="caption">
              <h4><%= truncate rec.product.name, :length => 50 %></h4>
              <p>
                <small><b>Price: </b><%= number_to_currency(rec.product.price, :unit => "HRK ", :separator => ',', :delimiter => '.') %></small><br />
                <small><b>Sales unit of measure: </b><%= rec.product.sales_unit_of_measure %></small><br />
                <small><b>Manufacturer: </b><%= rec.product.manufacturer %></small><br />
                <small><b>Supplier: </b><%= rec.product.supplier %></small><br />
              </p>
              <p>
                <span class="badge badge-success pull-right"><%= ((rec.factor.to_f/@max_factor.to_f)*100).to_i %>%</span>
                <%= add_btn_helper(rec.product, :medium) %>
                <%= link_to "<i class=\"icon-info\"></i> Info".html_safe, product_path(rec.product), :class => "btn" %>
              </p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <blockquote>
    <p>Other popular products</p>
  </blockquote>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Rating</td>
        <th>Product name</th>
        <th>Price</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @popular_products.each do |rec| %>
        <tr>
          <td style="width: 180px;">
            <div>
              Rating: <span class="pull-right strong"><%= ((rec.factor.to_f/@max_factor.to_f)*100).to_i %> %</span>
              <div class="progress progress-striped active">
                <div class="bar " style="width: <%= ((rec.factor.to_f/@max_factor.to_f)*100).to_i %>%;"></div>
              </div>
            </div>
          </td>
          <td><%= rec.product.name %></td>
          <td><%= number_to_currency(rec.product.price, :unit => "HRK ", :separator => ',', :delimiter => '.') %></td>
          <td>
            <%= link_to "<i class=\"icon-info\"> Info</i>".html_safe, product_path(rec.product), :class => "btn btn-small" %>
          </td>
          <td>
            <%= add_btn_helper(rec.product) %>
          <td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>