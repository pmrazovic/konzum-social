<%= render :partial => "dashboard/navigation_sidebar" %>
<div class="span9">
  <div class="well well-small">
    <h4 style="margin-left: 15px;"><i class="icon-heart"/></i> Favorites</h4>
  </div>

  <% unless flash[:notice].blank? %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice].html_safe %>
    </div>
  <% end %>  

  <% if @favorites.blank? %>
    <div class="alert alert-info">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
        You don't have any products in favorites.
    </div>
  <% else %>
    <%= render :partial => 'shared/users_favorite_products', :locals => {:favorites => @favorites} %>
  <% end %>

</div>