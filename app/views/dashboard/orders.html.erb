<%= render :partial => "dashboard/navigation_sidebar" %>
<div class="span9">
  <div class="well well-small">
    <h4 style="margin-left: 15px;"><i class="icon-shopping-cart"/></i> Orders</h4>
  </div>

  <div class="pagination">
    <%= will_paginate @orders, :previous_label => 'Previous', :next_label => 'Next', :renderer => 'BootstrapPaginationHelper::LinkRenderer'%>
  </div>
  
  <div class="accordion">
    <div class="accordion-group">    
      <% @orders.each do |order| %>
        <%= render :partial => 'shared/order_preview', :locals => {:order => order} %>
      <% end %>
    </div>
  </div>

  <div class="pagination">
    <%= will_paginate @orders, :previous_label => 'Previous', :next_label => 'Next', :renderer => 'BootstrapPaginationHelper::LinkRenderer'%>
  </div>

</div>