<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to 'Konzum social', root_path,   :class => 'brand' %>
      <div class="nav-collapse collapse navbar-inverse-collapse">
        <ul class="nav">
          <li class="divider-vertical"></li>
          <li><a href=<%= categories_path %>><i class="icon-home icon-white"></i> Home</a></li>
          <li class="divider-vertical"></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Products <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <%= get_cached_categories_list_for_navbar.html_safe %>
            </ul>
          </li>
          <li class="divider-vertical"></li>
          <li><%= link_to "Friends", "#" %></li>
          <li class="divider-vertical"></li>
          <li><%= link_to "Settings", "#" %></li>
          <li class="divider-vertical"></li>
        </ul>
        <ul class="nav pull-right">
          <% if current_user.blank? %>
            <% if params[:controller] == 'devise/sessions' && params[:action] == 'new' %>
              <%= link_to 'Sign up', new_user_registration_path, :class => 'btn btn-inverse' %>
            <% elsif params[:controller] == 'devise/registrations' && params[:action] == 'new' %>
              <%= link_to 'Sign in', new_user_session_path, :class => 'btn btn-inverse' %>
            <% end %>
          <% else %>
            <li class="divider-vertical"></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"></i> <%= current_user.full_name %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="#"><i class="icon-user icon-white"></i> Profile</a></li>
                <li><a href="<%= edit_user_registration_path %>"><i class="icon-wrench icon-white"></i> Settings</a></li>
                <li class="divider"></li>
                <li><a href="<%= destroy_user_session_path %>" data-method="delete"><i class="icon-share icon-white"></i> Log out</a></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div><!-- /.nav-collapse -->
    </div>
  </div><!-- /navbar-inner -->
</div><!-- /navbar -->
