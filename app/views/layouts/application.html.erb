<!DOCTYPE html>
<html>
<head>
  <title>KonzumSocial</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">Konzum social</a>
        <div class="btn-group pull-right">
          <% if current_user.blank? %>
            <%= link_to "Sign Up", new_registration_path(resource_name), :class => "btn btn-inverse" %>
          <% else %>
            <a class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="icon-user icon-white"></i> <%= current_user.full_name %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", "#" %></li>
              <li><%= link_to "Settings", edit_user_registration_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", destroy_user_session_path, :method => :delete %></a></li>
            </ul>
          <% end %>
        </div>

        <div class="nav-collapse">
          <ul class="nav">
            <li><%= link_to "Home", "#" %></li>
            <li><%= link_to "Products", "#" %></li>
            <li><%= link_to "Friends", "#" %></li>
            <li><%= link_to "Settings", "#" %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>

  <header class="jumbotron subhead" id="overview">
    <div class="container">
      <%= image_tag 'small_banner.png'%>
    </div>
  </header>

  <div class="container" style="padding-top: 30px">
      <div class="row-fluid">
        <div class="span3">  
        </div>
        <div class="span9">
          <!--Body content-->
          <%= yield %>
        </div>
      </div>
    </div>

</body>
</html>
