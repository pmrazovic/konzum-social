<table class="table table-striped">
  <thead>
      <th>Name</th>
  </thead>
  <tbody>
    <% recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td>
          <%= link_to "<i class=\"icon-edit\"></i> Edit recipe".html_safe, edit_recipe_path(recipe), :class => "btn btn-primary btn-small" %>
        </td>
        <td>
        <%= link_to "<i class=\"icon-remove\"></i>".html_safe, recipe_path(recipe), :method => :delete, :title => "Remove from favorites" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
